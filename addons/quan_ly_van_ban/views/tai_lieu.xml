<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Form View -->
        <record id="view_tai_lieu_form" model="ir.ui.view">
            <field name="name">tai_lieu.form</field>
            <field name="model">tai_lieu</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="ten_tai_lieu" placeholder="Tên tài liệu"/>
                            </h1>
                        </div>
                        <group>
                            <group string="Thông tin tài liệu">
                                <field name="ma_tai_lieu"/>
                                <field name="loai_tai_lieu"/>
                                <field name="trang_thai"/>
                                <field name="nguoi_tao_id"/>
                            </group>
                            <group string="Liên kết">
                                <field name="khach_hang_id"/>
                                <field name="hop_dong_id"/>
                                <field name="ngay_tao"/>
                                <field name="ngay_hieu_luc"/>
                                <field name="ngay_het_han"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="File tài liệu" name="file">
                                <group>
                                    <field name="file_tai_lieu" filename="file_tai_lieu_name"/>
                                    <field name="file_tai_lieu_name" invisible="1"/>
                                </group>
                            </page>
                            <page string="Mô tả" name="mo_ta">
                                <field name="mo_ta"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Tree View -->
        <record id="view_tai_lieu_tree" model="ir.ui.view">
            <field name="name">tai_lieu.tree</field>
            <field name="model">tai_lieu</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="ma_tai_lieu"/>
                    <field name="ten_tai_lieu"/>
                    <field name="loai_tai_lieu"/>
                    <field name="khach_hang_id"/>
                    <field name="hop_dong_id"/>
                    <field name="ngay_tao"/>
                    <field name="trang_thai"/>
                </tree>
            </field>
        </record>

        <!-- Search View -->
        <record id="view_tai_lieu_search" model="ir.ui.view">
            <field name="name">tai_lieu.search</field>
            <field name="model">tai_lieu</field>
            <field name="arch" type="xml">
                <search>
                    <field name="ma_tai_lieu"/>
                    <field name="ten_tai_lieu"/>
                    <field name="khach_hang_id"/>
                    <field name="hop_dong_id"/>
                    <filter string="Đang hiệu lực" name="hieu_luc" domain="[('trang_thai', '=', 'hieu_luc')]"/>
                    <group expand="0" string="Nhóm theo">
                        <filter string="Loại tài liệu" name="group_loai" context="{'group_by': 'loai_tai_lieu'}"/>
                        <filter string="Khách hàng" name="group_kh" context="{'group_by': 'khach_hang_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Action -->
        <record id="action_tai_lieu" model="ir.actions.act_window">
            <field name="name">Tài liệu số hóa</field>
            <field name="res_model">tai_lieu</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_tai_lieu_search"/>
        </record>
    </data>
</odoo>
