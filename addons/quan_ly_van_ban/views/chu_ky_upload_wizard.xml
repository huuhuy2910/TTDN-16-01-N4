<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_van_ban_di_signature_wizard_form" model="ir.ui.view">
            <field name="name">van.ban.di.signature.wizard.form</field>
            <field name="model">van.ban.di.signature.wizard</field>
            <field name="arch" type="xml">
                <form string="Upload chữ ký" create="false" edit="false">
                    <sheet>
                        <group>
                            <field name="van_ban_di_id" readonly="1" invisible="1"/>
                            <field name="chu_ky_anh" filename="ten_chu_ky_anh" widget="binary"/>
                            <field name="ten_chu_ky_anh" invisible="1"/>
                            <div class="mt-2">
                                <small class="text-muted">Chọn file ảnh chữ ký (PNG, JPG) hoặc PDF để xem trước và xác nhận ký.</small>
                            </div>
                        </group>
                        <group string="Xem trước" attrs="{'invisible': [('preview_image', '=', False)]}">
                            <field name="preview_image" widget="image" class="oe_avatar"/>
                        </group>
                    </sheet>
                    <footer>
                        <button name="action_confirm" string="Xác nhận ký" type="object" class="btn-primary"/>
                        <button string="Hủy" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
