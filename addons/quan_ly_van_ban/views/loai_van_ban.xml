<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Form View -->
        <record id="view_loai_van_ban_form" model="ir.ui.view">
            <field name="name">loai_van_ban.form</field>
            <field name="model">loai_van_ban</field>
            <field name="arch" type="xml">
                <form string="Loại văn bản">
                    <sheet>
                        <group>
                            <group>
                                <field name="ma_loai"/>
                                <field name="ten_loai"/>
                            </group>
                            <group>
                                <field name="hoat_dong"/>
                            </group>
                        </group>
                        <group>
                            <field name="mo_ta" placeholder="Mô tả loại văn bản..."/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Tree View -->
        <record id="view_loai_van_ban_tree" model="ir.ui.view">
            <field name="name">loai_van_ban.tree</field>
            <field name="model">loai_van_ban</field>
            <field name="arch" type="xml">
                <tree string="Danh mục loại văn bản">
                    <field name="ma_loai"/>
                    <field name="ten_loai"/>
                    <field name="hoat_dong"/>
                </tree>
            </field>
        </record>

        <!-- Search View -->
        <record id="view_loai_van_ban_search" model="ir.ui.view">
            <field name="name">loai_van_ban.search</field>
            <field name="model">loai_van_ban</field>
            <field name="arch" type="xml">
                <search string="Tìm kiếm loại văn bản">
                    <field name="ma_loai"/>
                    <field name="ten_loai"/>
                    <filter string="Đang hoạt động" name="hoat_dong" domain="[('hoat_dong', '=', True)]"/>
                    <filter string="Ngừng hoạt động" name="ngung_hoat_dong" domain="[('hoat_dong', '=', False)]"/>
                </search>
            </field>
        </record>

        <!-- Action -->
        <record id="action_loai_van_ban" model="ir.actions.act_window">
            <field name="name">Loại văn bản</field>
            <field name="res_model">loai_van_ban</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>
