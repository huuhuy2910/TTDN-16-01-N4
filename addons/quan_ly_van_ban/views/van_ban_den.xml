<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Form View -->
        <record id="view_van_ban_den_form" model="ir.ui.view">
            <field name="name">van_ban_den.form</field>
            <field name="model">van_ban_den</field>
            <field name="arch" type="xml">
                <form string="Văn bản đến">
                    <header>
                        <button name="action_extract_and_summarize" string="Trích xuất &amp; Tóm tắt" type="object" 
                                class="btn-primary" icon="fa-magic"
                                attrs="{'invisible': [('file_dinh_kem', '=', False)]}"
                                help="Sử dụng AI để trích xuất và tóm tắt nội dung từ file đính kèm"/>
                        <field name="trang_thai" widget="statusbar" statusbar_visible="moi,dang_xu_ly,qua_han,da_xu_ly"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="so_ky_hieu"/>
                                <field name="loai_van_ban_id"/>
                                <field name="ngay_van_ban"/>
                                <field name="ngay_den"/>
                                <field name="noi_ban_hanh"/>
                                <field name="nguoi_ky"/>
                                <field name="khach_hang_id"/>
                            </group>
                            <group>
                                <field name="do_khan"/>
                                <field name="do_mat"/>
                                <field name="nguoi_xu_ly_id" invisible="1"/>
                                <field name="han_xu_ly" invisible="1"/>
                                <field name="hop_dong_id"/>
                                <field name="bao_gia_id"/>
                            </group>
                        </group>
                        <group>
                            <field name="trich_yeu" placeholder="Nhập trích yếu văn bản..."/>
                        </group>
                        <group>
                            <field name="ghi_chu" placeholder="Ghi chú..."/>
                        </group>
                        <group>
                            <group>
                                <field name="file_dinh_kem" filename="ten_file"/>
                                <field name="ten_file" invisible="1"/>
                            </group>
                        </group>
                        <group string="Thông tin khác">
                            <group>
                                <field name="nguoi_tao_id"/>
                                <field name="ngay_tao"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Tree View -->
        <record id="view_van_ban_den_tree" model="ir.ui.view">
            <field name="name">van_ban_den.tree</field>
            <field name="model">van_ban_den</field>
            <field name="arch" type="xml">
                <tree string="Văn bản đến" decoration-danger="do_khan in ['khan', 'hoa_toc', 'thuong_khat']">
                    <field name="so_ky_hieu"/>
                    <field name="ngay_den"/>
                    <field name="ngay_van_ban"/>
                    <field name="noi_ban_hanh"/>
                    <field name="khach_hang_id"/>
                    <field name="trich_yeu"/>
                    <field name="loai_van_ban_id"/>
                    <field name="do_khan"/>
                    <field name="nguoi_xu_ly_id"/>
                    <field name="trang_thai"/>
                    <field name="khach_hang_id" invisible="1"/>
                </tree>
            </field>
        </record>

        <!-- Search View -->
        <record id="view_van_ban_den_search" model="ir.ui.view">
            <field name="name">van_ban_den.search</field>
            <field name="model">van_ban_den</field>
            <field name="arch" type="xml">
                <search string="Tìm kiếm văn bản đến">
                    <field name="so_ky_hieu"/>
                    <field name="noi_ban_hanh"/>
                    <field name="trich_yeu"/>
                    <field name="nguoi_xu_ly_id"/>
                    <field name="khach_hang_id"/>
                    <filter string="Mới" name="moi" domain="[('trang_thai', '=', 'moi')]"/>
                    <filter string="Đang xử lý" name="dang_xu_ly" domain="[('trang_thai', '=', 'dang_xu_ly')]"/>
                    <filter string="Quá hạn" name="qua_han" domain="[('trang_thai', '=', 'qua_han')]"/>
                    <filter string="Đã xử lý" name="da_xu_ly" domain="[('trang_thai', '=', 'da_xu_ly')]"/>
                    <separator/>
                    <filter string="Khẩn" name="khan" domain="[('do_khan', 'in', ['khan', 'hoa_toc', 'thuong_khat'])]"/>
                    <filter string="Hôm nay" name="hom_nay" domain="[('ngay_den', '=', context_today().strftime('%Y-%m-%d'))]"/>
                    <group expand="0" string="Nhóm theo">
                        <filter string="Trạng thái" name="group_trang_thai" context="{'group_by': 'trang_thai'}"/>
                        <filter string="Loại văn bản" name="group_loai" context="{'group_by': 'loai_van_ban_id'}"/>
                        <filter string="Người xử lý" name="group_nguoi_xu_ly" context="{'group_by': 'nguoi_xu_ly_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Action -->
        <record id="action_van_ban_den" model="ir.actions.act_window">
            <field name="name">Văn bản đến</field>
            <field name="res_model">van_ban_den</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('view_van_ban_den_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('view_van_ban_den_form')})]"/>
            <field name="domain">[]</field>
            <field name="context">{'search_default_da_xu_ly': 0}</field>
        </record>
    </data>
</odoo>

