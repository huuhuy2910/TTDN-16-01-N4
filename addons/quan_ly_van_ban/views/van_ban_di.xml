<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Form View -->
        <record id="view_van_ban_di_form" model="ir.ui.view">
            <field name="name">van_ban_di.form</field>
            <field name="model">van_ban_di</field>
            <field name="arch" type="xml">
                <form string="Văn bản đi">
                    <header>
                        <button name="action_gui_duyet" string="Gửi duyệt" type="object" 
                                class="oe_highlight" attrs="{'invisible': [('trang_thai', '!=', 'du_thao')]}"/>
                        <button name="action_duyet" string="Duyệt" type="object" 
                                class="oe_highlight" attrs="{'invisible': [('trang_thai', '!=', 'cho_duyet')]}"/>
                        <button name="action_gui_van_ban" string="Đã gửi" type="object" 
                                class="oe_highlight" attrs="{'invisible': [('trang_thai', '!=', 'da_duyet')]}"/>
                        <field name="trang_thai" widget="statusbar" statusbar_visible="du_thao,cho_duyet,da_duyet,da_gui"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="so_ky_hieu"/>
                                <field name="loai_van_ban_id"/>
                                <field name="ngay_van_ban"/>
                                <field name="ngay_gui" attrs="{'readonly': [('trang_thai', '!=', 'da_gui')]}"/>
                                <field name="noi_nhan"/>
                                <field name="nguoi_ky"/>
                            </group>
                            <group>
                                <field name="do_khan"/>
                                <field name="do_mat"/>
                                <field name="nguoi_soan_thao_id"/>
                                <field name="don_vi_soan_thao_id"/>
                                <field name="hop_dong_id"/>
                            </group>
                        </group>
                        <group>
                            <field name="trich_yeu" placeholder="Nhập trích yếu văn bản..."/>
                        </group>
                        <group>
                            <field name="ghi_chu" placeholder="Ghi chú..."/>
                        </group>
                        <group>
                            <group>
                                <field name="file_dinh_kem" filename="ten_file"/>
                                <field name="ten_file" invisible="1"/>
                            </group>
                        </group>
                        <group string="Thông tin khác">
                            <group>
                                <field name="nguoi_tao_id"/>
                                <field name="ngay_tao"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Tree View -->
        <record id="view_van_ban_di_tree" model="ir.ui.view">
            <field name="name">van_ban_di.tree</field>
            <field name="model">van_ban_di</field>
            <field name="arch" type="xml">
                <tree string="Văn bản đi" decoration-danger="do_khan in ['khan', 'hoa_toc', 'thuong_khat']">
                    <field name="so_ky_hieu"/>
                    <field name="ngay_van_ban"/>
                    <field name="ngay_gui"/>
                    <field name="noi_nhan"/>
                    <field name="trich_yeu"/>
                    <field name="loai_van_ban_id"/>
                    <field name="do_khan"/>
                    <field name="trang_thai"/>
                </tree>
            </field>
        </record>

        <!-- Search View -->
        <record id="view_van_ban_di_search" model="ir.ui.view">
            <field name="name">van_ban_di.search</field>
            <field name="model">van_ban_di</field>
            <field name="arch" type="xml">
                <search string="Tìm kiếm văn bản đi">
                    <field name="so_ky_hieu"/>
                    <field name="noi_nhan"/>
                    <field name="trich_yeu"/>
                    <field name="nguoi_soan_thao_id"/>
                    <filter string="Dự thảo" name="du_thao" domain="[('trang_thai', '=', 'du_thao')]"/>
                    <filter string="Chờ duyệt" name="cho_duyet" domain="[('trang_thai', '=', 'cho_duyet')]"/>
                    <filter string="Đã duyệt" name="da_duyet" domain="[('trang_thai', '=', 'da_duyet')]"/>
                    <filter string="Đã gửi" name="da_gui" domain="[('trang_thai', '=', 'da_gui')]"/>
                    <separator/>
                    <filter string="Khẩn" name="khan" domain="[('do_khan', 'in', ['khan', 'hoa_toc', 'thuong_khat'])]"/>
                    <filter string="Hôm nay" name="hom_nay" domain="[('ngay_van_ban', '=', context_today().strftime('%Y-%m-%d'))]"/>
                    <group expand="0" string="Nhóm theo">
                        <filter string="Trạng thái" name="group_trang_thai" context="{'group_by': 'trang_thai'}"/>
                        <filter string="Loại văn bản" name="group_loai" context="{'group_by': 'loai_van_ban_id'}"/>
                        <filter string="Người soạn thảo" name="group_nguoi_soan_thao" context="{'group_by': 'nguoi_soan_thao_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Action -->
        <record id="action_van_ban_di" model="ir.actions.act_window">
            <field name="name">Văn bản đi</field>
            <field name="res_model">van_ban_di</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>

