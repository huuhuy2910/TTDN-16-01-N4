<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Search view specialized for showing contracts with filters for customer -->
        <record id="view_hop_dong_search_kh" model="ir.ui.view">
            <field name="name">hop_dong.search.khach_hang</field>
            <field name="model">hop_dong</field>
            <field name="arch" type="xml">
                <search string="Tìm hợp đồng (Văn bản)">
                    <field name="ma_hop_dong"/>
                    <field name="ten_hop_dong"/>
                    <field name="khach_hang_id"/>
                    <field name="trang_thai"/>
                    <field name="ngay_het_han"/>
                    <field name="nhan_vien_phu_trach_id"/>

                    <filter string="Khách hàng: Doanh nghiệp" name="kh_dn" domain="[('khach_hang_id.loai_khach_hang','=','doanh_nghiep')]"/>
                    <filter string="Khách hàng: Cá nhân" name="kh_cn" domain="[('khach_hang_id.loai_khach_hang','=','ca_nhan')]"/>

                    <group expand="0" string="Nhóm theo">
                        <filter string="Trạng thái" name="group_trang_thai" context="{'group_by': 'trang_thai'}"/>
                        <filter string="Nhân viên phụ trách" name="group_nv" context="{'group_by': 'nhan_vien_phu_trach_id'}"/>
                        <filter string="Khách hàng" name="group_kh" context="{'group_by': 'khach_hang_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Action opens hop_dong list (contracts) but placed under Khách hàng module as 'Văn bản' -->
        <record id="action_van_ban_from_khach_hang" model="ir.actions.act_window">
            <field name="name">Văn bản</field>
            <field name="res_model">hop_dong</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" eval="False"/>
            <field name="domain">[]</field>
            <field name="context">{'search_default_group_trang_thai': 0}</field>
        </record>

        <!-- Menu item under Quản lý khách hàng root -->
        <menuitem id="menu_van_ban_khach_hang" name="Văn bản" parent="menu_qlkh_root" action="action_van_ban_from_khach_hang" sequence="15"/>
    </data>
</odoo>
