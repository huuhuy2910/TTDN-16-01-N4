<?xml version="1.0" encoding="utf-8"?>
<templates id="template_qlkh_dashboard" xml:space="preserve">
    <t t-name="quan_ly_khach_hang.Dashboard" owl="1">
        <div class="o_qlkh_dashboard o_content container-fluid p-4">
            <div class="o_qlkh_header d-flex flex-wrap align-items-center justify-content-between mb-3">
                <h1 class="mb-2">Dashboard Quản lý khách hàng</h1>
                <div class="o_qlkh_filters d-flex flex-wrap gap-2">
                    <select class="form-control" t-on-change="onTimeRangeChange">
                        <option value="">Tất cả thời gian</option>
                        <option value="7">7 ngày gần đây</option>
                        <option value="30">30 ngày gần đây</option>
                        <option value="90">90 ngày gần đây</option>
                        <option value="365">12 tháng gần đây</option>
                    </select>
                    <select class="form-control" t-on-change="onNhanVienChange">
                        <option value="">Tất cả nhân viên</option>
                        <t t-foreach="state.filterOptions.nhanVien" t-as="nv" t-key="nv.id">
                            <option t-att-value="nv.id" t-esc="nv.ho_va_ten"/>
                        </t>
                    </select>
                </div>
            </div>

            <div class="row g-3 mb-4">
                <div class="col-12 col-md-6 col-lg-2">
                    <div class="o_qlkh_stat_card">
                        <div class="stat_label">Tổng KH</div>
                        <div class="stat_value" t-esc="state.summary.totalKhachHang"/>
                    </div>
                </div>
                <div class="col-12 col-md-6 col-lg-2">
                    <div class="o_qlkh_stat_card">
                        <div class="stat_label">Hợp đồng</div>
                        <div class="stat_value" t-esc="state.summary.totalHopDong"/>
                    </div>
                </div>
                <div class="col-12 col-md-6 col-lg-2">
                    <div class="o_qlkh_stat_card">
                        <div class="stat_label">Cơ hội</div>
                        <div class="stat_value" t-esc="state.summary.totalCoHoi"/>
                    </div>
                </div>
                <div class="col-12 col-md-6 col-lg-2">
                    <div class="o_qlkh_stat_card">
                        <div class="stat_label">Doanh thu</div>
                        <div class="stat_value" t-esc="state.summary.totalDoanhThu"/>
                    </div>
                </div>
                <div class="col-12 col-md-6 col-lg-2">
                    <div class="o_qlkh_stat_card">
                        <div class="stat_label">Công nợ</div>
                        <div class="stat_value" t-esc="state.summary.totalCongNo"/>
                    </div>
                </div>
                <div class="col-12 col-md-6 col-lg-2">
                    <div class="o_qlkh_stat_card">
                        <div class="stat_label">Khiếu nại</div>
                        <div class="stat_value" t-esc="state.summary.totalKhieuNai"/>
                    </div>
                </div>
            </div>

            <div class="row g-3 mb-4">
                <div class="col-md-6">
                    <div class="card o_qlkh_card">
                        <div class="card-body">
                            <canvas class="o_qlkh_pie_chart" style="max-height: 260px;"></canvas>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card o_qlkh_card">
                        <div class="card-body">
                            <canvas class="o_qlkh_line_chart" style="max-height: 260px;"></canvas>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row g-3 mb-4">
                <div class="col-md-6">
                    <div class="card o_qlkh_card">
                        <div class="card-body">
                            <h5 class="mb-3">Hợp đồng sắp hết hạn (30 ngày)</h5>
                            <div class="table-responsive o_qlkh_table_scroll">
                                <table class="table table-sm table-hover">
                                    <thead>
                                        <tr>
                                            <th>Mã</th>
                                            <th>Tên</th>
                                            <th>Khách hàng</th>
                                            <th>Ngày hết hạn</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-if="state.sapHetHan.length === 0">
                                            <tr>
                                                <td colspan="4" class="text-center text-muted">Chưa có dữ liệu</td>
                                            </tr>
                                        </t>
                                        <t t-foreach="state.sapHetHan" t-as="item" t-key="item.id">
                                            <tr>
                                                <td t-esc="item.ma"/>
                                                <td t-esc="item.ten"/>
                                                <td t-esc="item.khach_hang"/>
                                                <td t-esc="item.ngay_het_han"/>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card o_qlkh_card">
                        <div class="card-body">
                            <h5 class="mb-3">Cơ hội bán hàng mới nhất</h5>
                            <div class="table-responsive o_qlkh_table_scroll">
                                <table class="table table-sm table-hover">
                                    <thead>
                                        <tr>
                                            <th>Tên</th>
                                            <th>Khách hàng</th>
                                            <th>Giá trị</th>
                                            <th>Giai đoạn</th>
                                            <th>Xác suất</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-if="state.recentCoHoi.length === 0">
                                            <tr>
                                                <td colspan="5" class="text-center text-muted">Chưa có dữ liệu</td>
                                            </tr>
                                        </t>
                                        <t t-foreach="state.recentCoHoi" t-as="item" t-key="item.id">
                                            <tr>
                                                <td t-esc="item.ten_co_hoi"/>
                                                <td t-esc="item.khach_hang"/>
                                                <td t-esc="item.gia_tri_du_kien"/>
                                                <td t-esc="item.giai_doan"/>
                                                <td t-esc="item.ty_le"/>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div t-if="state.loading" class="text-center mt-4">
                <div class="spinner-border" role="status">
                    <span class="sr-only">Loading...</span>
                </div>
            </div>
        </div>
    </t>
</templates>
