<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Action -->
    <record id="action_du_an" model="ir.actions.act_window">
        <field name="name">Dự án</field>
        <field name="res_model">du_an</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo dự án mới
            </p>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_du_an_tree" model="ir.ui.view">
        <field name="name">du_an.tree</field>
        <field name="model">du_an</field>
        <field name="arch" type="xml">
            <tree>
                <field name="ma_du_an"/>
                <field name="name"/>
                <field name="quan_ly_id"/>
                <field name="ngay_bat_dau"/>
                <field name="ngay_ket_thuc"/>
                <field name="trang_thai"/>
                <field name="so_cong_viec"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_du_an_form" model="ir.ui.view">
        <field name="name">du_an.form</field>
        <field name="model">du_an</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="ma_du_an"/>
                            <field name="name"/>
                            <field name="quan_ly_id"/>
                            <field name="trang_thai"/>
                        </group>
                        <group>
                            <field name="ngay_bat_dau"/>
                            <field name="ngay_ket_thuc"/>
                            <field name="ngan_sach"/>
                            <field name="so_cong_viec"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Mô tả">
                            <field name="mo_ta"/>
                        </page>
                        <page string="Thành viên">
                            <field name="thanh_vien_ids">
                                <tree>
                                    <field name="ma_dinh_danh"/>
                                    <field name="ho_va_ten"/>
                                    <field name="email"/>
                                    <field name="so_dien_thoai"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Công việc">
                            <field name="cong_viec_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="nhan_vien_id"/>
                                    <field name="trang_thai"/>
                                    <field name="tien_do" widget="progressbar"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Ghi chú">
                            <field name="ghi_chu"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_du_an_kanban" model="ir.ui.view">
        <field name="name">du_an.kanban</field>
        <field name="model">du_an</field>
        <field name="arch" type="xml">
            <kanban default_group_by="trang_thai">
                <field name="name"/>
                <field name="quan_ly_id"/>
                <field name="so_cong_viec"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card">
                            <div class="oe_kanban_content">
                                <strong><field name="name"/></strong>
                                <div>
                                    <field name="quan_ly_id"/>
                                </div>
                                <div>
                                    Công việc: <field name="so_cong_viec"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>
