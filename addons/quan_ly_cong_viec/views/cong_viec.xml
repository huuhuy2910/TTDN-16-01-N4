<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Action -->
    <record id="action_cong_viec" model="ir.actions.act_window">
        <field name="name">Công việc</field>
        <field name="res_model">cong_viec</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo công việc mới
            </p>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_cong_viec_tree" model="ir.ui.view">
        <field name="name">cong_viec.tree</field>
        <field name="model">cong_viec</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="nhan_vien_id"/>
                <field name="du_an_id"/>
                <field name="ngay_bat_dau"/>
                <field name="deadline"/>
                <field name="trang_thai"/>
                <field name="muc_do_uu_tien"/>
                <field name="tien_do" widget="progressbar"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_cong_viec_form" model="ir.ui.view">
        <field name="name">cong_viec.form</field>
        <field name="model">cong_viec</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="nhan_vien_id"/>
                            <field name="nguoi_giao_id"/>
                            <field name="du_an_id"/>
                        </group>
                        <group>
                            <field name="ngay_bat_dau"/>
                            <field name="ngay_ket_thuc"/>
                            <field name="deadline"/>
                            <field name="trang_thai"/>
                            <field name="muc_do_uu_tien"/>
                            <field name="tien_do" widget="progressbar"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Mô tả">
                            <field name="mo_ta"/>
                        </page>
                        <page string="Ghi chú">
                            <field name="ghi_chu"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="view_cong_viec_kanban" model="ir.ui.view">
        <field name="name">cong_viec.kanban</field>
        <field name="model">cong_viec</field>
        <field name="arch" type="xml">
            <kanban default_group_by="trang_thai">
                <field name="name"/>
                <field name="nhan_vien_id"/>
                <field name="tien_do"/>
                <field name="muc_do_uu_tien"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card">
                            <div class="oe_kanban_content">
                                <strong><field name="name"/></strong>
                                <div>
                                    <field name="nhan_vien_id"/>
                                </div>
                                <div>
                                    <field name="tien_do" widget="progressbar"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>
